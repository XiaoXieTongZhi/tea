.detail {
  padding: 20rpx;
}

.detail .title {
  font-size: 48rpx;
  text-align: center;
  padding: 0 0 25rpx 0;
}

.detail .info {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 1px dotted var(--greyColor);
}

.detail .info .left {
  width: 70vw;
  font-size: 28rpx;
  display: flex;
  justify-content: space-around;
  color: var(--greyColor);
}

.detail .info .right {
  color: var(--themeColor);
  position: relative;
}

.detail .info .right .share {
  width: 30rpx;
  height: 30rpx;
  transform: scale(1.3);
  position: absolute;
  left: 10rpx;
  top: 0;
  opacity: 0;
}

.detail .content {
  font-weight: bolder;
  font-size: 30rpx;
  padding: 15rpx 0;
}

.detail .content .pstyle {
  padding: 10rpx 0;
  line-height: 1.6rem;
}

.detail .content .imgstyle {
  border-radius: 10rpx;
}

.detail .copyright {
  background-color: var(--globalBgColor2);
  padding: 25rpx;
  color: var(--descColor);
}

.detail .copyright .top {
  padding: 10rpx 0;
}

.detail .copyright .ct {
  font-size: 28rpx;
}
